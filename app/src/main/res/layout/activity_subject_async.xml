<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sodino.rx.demo.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtHello"
        android:text="Please click 'FireEvent' -> 'Registe' -> 'Unregister' strictly sequential, again and again, then see the log"
        app:layout_constraintTop_toTopOf="parent" />

    <Button android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnRegiste"
        android:text="Registe"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/txtHello"/>
    <Button android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnFireEvent"
        android:text="fireEvent"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/btnRegiste"/>
    <Button android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnUnregiste"
        android:text="unRegiste"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/btnFireEvent"/>

</android.support.constraint.ConstraintLayout>
